<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/first_fragment">

    <fragment
        android:id="@+id/first_fragment"
        android:name="com.example.catbreeds.ui.breeds.CatBreedsFragment"
        android:label="Breeds List"
        tools:layout="@layout/fragment_cat_breeds">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/second_fragment" />
    </fragment>

    <fragment
        android:id="@+id/second_fragment"
        android:name="com.example.catbreeds.ui.detail.CatBreedDetailsFragment"
        android:label="Breed Details"
        tools:layout="@layout/fragment_cat_breed_details" />
</navigation>